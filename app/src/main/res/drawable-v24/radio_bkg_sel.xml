<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/purpleColor" />
            <stroke android:width="1dp" android:color="#FFB8" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFF" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <corners android:radius="8dp" />
            <padding android:bottom="5dp" android:left="15dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

</selector>